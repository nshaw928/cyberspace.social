# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# Django Configuration
SECRET_KEY=your_super_secret_django_key_here_generate_with_get_random_secret_key
DEBUG=False

# Server Configuration
PORT=80

# Domain Configuration (update for production deployment)
# For local testing: localhost,127.0.0.1
# For production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration (update for production deployment)
# For local testing: http://localhost,http://127.0.0.1
# For production with HTTPS: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# CSRF Configuration (update for production deployment)
# For local testing: http://localhost,http://127.0.0.1
# For production with HTTPS: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Production Notes:
# 1. Generate a secure SECRET_KEY using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 2. Use a strong database password (minimum 20 characters)
# 3. For HTTPS deployments, update CORS and CSRF origins to use https://
# 4. Never commit the actual .env file - only commit .env.example
